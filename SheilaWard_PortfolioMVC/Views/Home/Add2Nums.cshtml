@{
    ViewBag.Title = "Add2Nums";
}

<h2>Add2Nums</h2>
<div class="row">
    <div class="col-md-6">
        <p>Enter num1: <input id="num1" type="number" /></p>
        <p>Enter num2: <input id="num2" type="number" /></p>
        <button id="addBtn" class="btn btn-success">Add the Numbers</button>
    </div>
    <div class="col-md-6">
        <h3>Your two numbers added together are: </h3>
        <p id="sumOfNums"></p>
    </div>
    <hr />
</div>

@section scripts{
    <script>
        $("#addBtn").click(function () {
            var num1 = Number($("#num1").val());
            var num2 = +$("#num2").val();
            $("#sumOfNums").html(num1 + num2);
        })
    </script>
}

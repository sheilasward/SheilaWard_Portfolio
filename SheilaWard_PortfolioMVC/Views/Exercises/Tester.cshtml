<div>

    <button class="btn btn-info btn-lg newModal">MATH</button><br />


    <button class="btn btn-warning btn-lg newModal">FACTORIAL</button><br />


    <button class="btn btn-primary btn-lg newModal">FIZZBUZZ</button><br />


    <button class="btn btn-success btn-lg newModal">PALINDROME</button><br />

</div>

@section scripts {
    <script>
        function FizzBuzzA(value1, value2) {
            let returnValue = "";
            for (let i = 1; i <= 100; i++) {
                if (i % value1 == 0 && i % value2 == 0) {
                    returnValue += 'FizzBuzz ';
                }
                else if (i % value1 == 0) {
                    returnValue += 'Fizz ';
                }
                else if (i % value2 == 0) {
                    returnValue += 'Buzz ';
                }
                else {
                    returnValue += i + ' ';
                }
            }
            return returnValue;
        }
           function check() {
               let output = "";
               let val1 = document.getElementById('fizzNum').value;
               let val2 = document.getElementById('buzzNum').value;
               output = FizzBuzzA(val1, val2);
               document.getElementById('fbResult').innerHTML = output;
           }
    </script>
}

